@using WCMS.Data;
@using PagedList.Mvc;


@model PagedList.IPagedList<WCMS.Data.PopupData>

<link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.15/css/bootstrap-multiselect.css" rel="stylesheet" />
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.15/js/bootstrap-multiselect.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.15/js/bootstrap-multiselect.min.js"></script>


<title>Image Searh List</title>

<div class="container">
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="row text-center">
                    @using (Html.BeginForm("PopupList",
                        "Popup",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
                    {
                        <div class="col-md-12">
                            <div class="col-sm-1">
                                <label for="" class="col-form-label">Keyword:</label>
                            </div>
                            <div class="col-sm-4">
                                <input type="text" name="title" class="form-control" placeholder="please popup keyword">
                            </div>
                            <div class="col-sm-2">
                                <label for="" class="col-form-label">Expiration Date:</label>
                            </div>
                            <div class="col-sm-2">
                                <input type="text" id="txt_startDate" name="startDate" class="form-control" />
                            </div>
                            <div class="col-sm-1">
                                ~
                            </div>
                            <div class="col-sm-2">
                                <input type="text" id="txt_endDate" name="endDate" class="form-control" />
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="col-sm-1">
                                <label for="" class="col-form-label">JoinMember:</label>
                            </div>
                            <div class="col-sm-4">
                                <select class="custom-select " id="sel_joinMember" name="joinMember">
                                    <option value="">All</option>
                                    @if (ViewBag.Members != null)
                                    {
                                        foreach (var member in ViewBag.Members)
                                        {

                                            <option value="@member.memberNo">@member.memberName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <label for="" class="col-form-label">Popup Type:</label>
                            </div>
                            <div class="col-sm-5">
                                <select class="custom-select " id="sel_popupType" name="popupType">
                                    @if (ViewBag.Members != null)
                                    {
                                        foreach (var popupType in ViewBag.PopupTypes)
                                        {
                                            <option value="@popupType.code">@popupType.codeName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-sm-2">
                                <label for="" class="col-form-label">RegUser:</label>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" name="regUser" class="form-control" placeholder="please enter userId.">
                            </div>
                            <div class="col-sm-2">
                                <label for="" class="col-form-label"> PopupNo:</label>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" name="idxr" class="form-control" placeholder="please enter PopupNo.">
                            </div>
                            <div class="col-sm-1">
                                
                            </div>
                            <div class="col-sm-1">
                                <input type="submit" class="btn btn-primary pull-right" value="Search">
                            </div>
                        </div>
                        }
                    </div>
                </div>
        </div>
    
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">idx </th>
                        <th scope="col">title </th>
                        <th scope="col">Expiration Date</th>
                        <th scope="col">Popup Type</th>
                        <th scope="col">Descript</th>
                        <th scope="col">RegDate</th>
                        <th scope="col">RegUser</th>
                        <th scope="col">ModDate</th>
                        <th scope="col">ModUser</th>
                        <th scope="col">Preview</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var popup in Model)
                        {
                    <tr>

                        <td class="table-light">
                            <div class="checkbox" style="word-spacing:30px;">
                                <label class="checkbox-inline">
                                    <input name="chk_image" type="checkbox" value="@popup.idx" />
                                </label>
                            </div>
                        </td>
                        <td class="table-light">@popup.title</td>
                        <td class="table-light">@popup.startDate ~ @popup.endDate</td>
                        <td class="table-light">@popup.popupType</td>
                        <td class="table-light">@popup.descript</td>
                        <td class="table-light">@popup.regDate</td>
                        <td class="table-light">@popup.regUser</td>
                        <td class="table-light">@popup.modDate</td>
                        <td class="table-light">@popup.modUser</td>
                        <td class="table-light">
                        </td>
                    </tr>
                        }
                </tbody>
            </table>
            <div class="text-center">
                <div class="col-md-12" style="float:right">
                    <input type="button" class="btn btn-primary pull-right" value="UpdatePopup" onclick="javascript: AddPopupImage();">
                    <input type="button" class="btn btn-primary pull-right" value="Delete" onclick="javascript: DeleteImage();">
                </div>
                <ul class="pagination">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("PopupList", new { page }))
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Image Update</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="hid_idx" />
                    <div class="form-group">
                        <label for="txt_imageName" class="col-form-label">ImageName:</label>
                        <input type="text" class="form-control" id="txt_imageName" disabled>
                    </div>
                    <div class="form-group">
                        <label for="txt_imageKeywod" class="col-form-label">ImageKeywod:</label>
                        <input type="text" class="form-control" id="txt_imageKeywod">
                    </div>
                    <div class="form-group">
                        <label for="sel_useYn" class="col-form-label">UseYN:</label>
                        <select class="custom-select" id="sel_useYn">
                            <option value="Y">Y</option>
                            <option value="N">N</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">RegDate:</label>
                        <input type="text" class="form-control" id="txt_regDate" disabled>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">RegUser:</label>
                        <input type="text" class="form-control" id="txt_regUser" disabled>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">ModDate:</label>
                        <input type="text" class="form-control" id="txt_modDate" disabled>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">ModUser:</label>
                        <input type="text" class="form-control" id="txt_modUser" disabled>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .modal-backdrop {
        z-index: 1050;
    }

    .modal {
        z-index: 1060;
    }

    .ui-autocomplete {
        z-index: 9999 !important;
        max-height: 300px;
        overflow-y: auto;
        /* prevent horizontal scrollbar */
        overflow-x: hidden;
    }
</style>
<script>

    $(document).ready(function () {
        $('#sel_multiMember').multiselect({
            buttonWidth: '350px',
            includeSelectAllOption: true,
            nonSelectedText: 'Select an Option'
        });
    });

    $('#txt_endDate').datepicker({
        dateFormat: 'yy-mm-dd',
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>'
    });

    $('#txt_startDate').datepicker({
        dateFormat: 'yy-mm-dd',
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>',
    });

