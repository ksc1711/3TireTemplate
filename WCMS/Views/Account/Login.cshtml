
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/css/freelancer.min.css" rel="stylesheet" />
    <link href="~/Content/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/Member/login.js?v=1"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

</head>
<body>
    <div class="container">
        <br />
        <br />
        <!-- Contact Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Login</h2>

        <!-- Icon Divider -->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Contact Section Form -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>ID</label>
                            <input class="form-control" id="txt_userId" type="text" placeholder="UserID" required="required" data-validation-required-message="Please enter your id.">
                            <p class="help-block text-danger" id="p_userId"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>password</label>
                            <input class="form-control" id="txt_userPw" type="password" placeholder="Password" required="required" data-validation-required-message="Please enter your password.">
                            <p class="help-block text-danger" id="p_userPw"></p>
                        </div>
                    </div>

                    <br />
                    
                    <div class="form-group">
                        <button type="button" class="btn btn-primary btn-xl" id="btn_Login" onclick="javascript:memberLogin();">Login</button>
                        <button type="button" class="btn btn-primary btn-xl" id="btn_SignUp" onclick="javascript:moveSignUp();">Sign Up</button>
                    </div>
            </div>
        </div>

    </div>
</body>
</html>
