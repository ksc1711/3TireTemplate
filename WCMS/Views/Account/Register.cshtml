
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/Content/css/freelancer.min.css" rel="stylesheet" />
    <link href="~/Content/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/Member/login.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

</head>
<body>
    <div class="container">
        <br />
        <br />
        <!-- Contact Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0"> Sign Up </h2>

        <!-- Icon Divider -->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Contact Section Form -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                        <label>ID</label>
                        <input class="form-control" id="txt_userId" type="text" placeholder="UserID" required="required" >
                        <p class="help-block text-danger" id="p_userId"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                        <label>password</label>
                        <input class="form-control" id="txt_userPw" type="password" placeholder="Password" required="required" >
                        <p class="help-block text-danger" id="p_userPw"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                        <label>password</label>
                        <input class="form-control" id="txt_chk_userPw" type="password" placeholder="Check Password" required="required" >
                        <p class="help-block text-danger" id="p_chk_userPw"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                        <label>UserName</label>
                        <input class="form-control" id="txt_userName" type="text" placeholder="UserName" required="required" >
                        <p class="help-block text-danger" id="p_userName"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls mb-0 pb-2">
                        <label>Phone Number</label>
                        <input class="form-control" id="txt_userPhone" type="text" placeholder="PhoneNumber" required="required" >
                        <p class="help-block text-danger" id="p_userPhone"></p>
                    </div>
                </div>

                <br />

                <div class="form-group">
                    <button type="button" class="btn btn-primary btn-xl" id="btn_SignUp" onclick="javascript:memberSignUp()">Sign Up</button>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
